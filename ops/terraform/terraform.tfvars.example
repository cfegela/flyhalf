# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!

# Existing AWS Resources (REQUIRED)
acm_certificate_arn    = "arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERTIFICATE_ID"
route53_zone_id        = "Z1234567890ABC"
terraform_state_bucket = "your-terraform-state-bucket-name"

# Database Credentials (REQUIRED)
# Generate secure passwords: openssl rand -base64 32
db_password = "CHANGE_ME_SECURE_PASSWORD"

# JWT Secrets (REQUIRED)
# Generate secure secrets: openssl rand -base64 32
jwt_access_secret  = "CHANGE_ME_SECURE_ACCESS_SECRET"
jwt_refresh_secret = "CHANGE_ME_SECURE_REFRESH_SECRET"

# Optional: Override defaults
# db_username = "flyhalf"
# db_name = "flyhalf"
# api_desired_count = 1
