# GCP Project Configuration
project_id  = "your-gcp-project-id"
region      = "us-central1"
environment = "prod"

# Domain Configuration
frontend_domain = "app.flyhalf.io"
api_domain      = "api.flyhalf.io"

# Database Configuration (MINIMUM COST)
db_user              = "flyhalf_app"
db_password          = "CHANGE_ME_generate_secure_password"  # Use: openssl rand -base64 32
db_name              = "flyhalf"
db_tier              = "db-f1-micro"      # Smallest shared-core instance (~$7/month)
db_availability_type = "ZONAL"            # Single zone (cheapest option)

# JWT Secrets (generate with: openssl rand -base64 32)
jwt_access_secret  = "CHANGE_ME_generate_secure_secret"
jwt_refresh_secret = "CHANGE_ME_generate_secure_secret"

# Cloud Run Configuration (MINIMUM COST)
api_min_instances = 0          # No idle instances (pay only for requests)
api_max_instances = 3          # Reduced max for cost control
api_cpu           = "1000m"    # 1 vCPU (minimum for Cloud Run Gen 2)
api_memory        = "256Mi"    # Reduced to 256Mi for cost savings

# Networking
vpc_cidr   = "10.0.0.0/24"
enable_cdn = false  # CDN disabled to save costs (~$1-5/month savings)

# ===== COST ESTIMATES =====
# With these settings: ~$15-25/month total
# - Cloud SQL db-f1-micro: ~$7/month
# - VPC Connector (e2-micro): ~$8-12/month (2-3 instances)
# - Cloud Run: ~$0-5/month (0 min instances, pay per request)
# - Cloud Storage + LB: ~$0-2/month (minimal traffic)
# - Secret Manager: ~$0.06/month (3 secrets)

# ===== Higher Performance Configuration =====
# Uncomment below for better performance (higher cost)
# db_tier              = "db-custom-1-3840"  # 1 vCPU, 3.75GB RAM (~$40/month)
# db_availability_type = "REGIONAL"          # HA with failover (~2x cost)
# api_min_instances    = 1                   # Keep 1 instance warm (~$10/month)
# api_memory           = "512Mi"             # More memory for API
# enable_cdn           = true                # Enable CDN for better frontend performance
